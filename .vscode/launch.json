    "version": "0.2.0",
    "configurations": [
        {
            "name": "python",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "python w/ input",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": ["<", "${fileDirname}/${fileBasenameNoExtension}.in"],
            "console": "integratedTerminal"
        },
        {
            "name": "(lldb) w/ input",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.out",
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            // "externalConsole": true,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Setup input file",
                    "text": "settings set target.input-path ${fileDirname}/${fileBasenameNoExtension}.in",
                    "ignoreFailures": false
                }
            ],
            "preLaunchTask": "build_file_debug"
            // "miDebuggerPath": "/usr/bin/lldb",
        },
        {
            "name": "(lldb) launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            // "externalConsole": true,
            "MIMode": "lldb",
            "preLaunchTask": "build_file_debug"
            // "miDebuggerPath": "/usr/bin/lldb"
        },
        {
            "name": "(gdb) w/ input",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.out",
            "args": ["<", "${fileDirname}/${fileBasenameNoExtension}.in"],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_file_debug"
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_file_debug"
        }
    ]
}
