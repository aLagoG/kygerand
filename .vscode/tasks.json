    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_file_debug",
            "type": "shell",
            "command": "g++-8",
            "args": [
                "--std=c++14",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}